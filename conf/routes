# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /login                           controllers.Application.login()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#Dept
GET         /renderDepts            controllers.CDept.renderDepts()
POST        /addDept                controllers.CDept.addDept()
GET         /deptslist              controllers.CDept.deptslist()
GET         /renderViewDepts        controllers.CDept.renderViewDepts()
POST        /EditDepartment         controllers.CDept.EditDepartment(id:Long)
GET         /renderEditDept         controllers.CDept.renderEditDept(id:Long)
#GET         /deleteDept             controllers.CDept.deleteDept(id:Long)
GET         /DeactivateDept         controllers.CDept.DeactivateDept(id: String)
GET         /ActivateDept           controllers.CDept.ActivateDept(id: String)

